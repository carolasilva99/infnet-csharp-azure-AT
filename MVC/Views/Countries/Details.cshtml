@using Microsoft.AspNetCore.Mvc.TagHelpers
@model MVC.Models.Countries.CountryDto

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>CountryDto</h4>
    <hr />
    <div class="row">
        <div class="col-sm-6">
            <div class="card">
                <img class="card-img-top" src="@Model.PhotoId" alt="@Model.Name">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                </div>
            </div>
        </div>
    </div>
    <h4>States</h4>
    <hr />
    @{
        var numberOfColsNeeded = 2;
        var totalCounter = ViewBag.NumberOfStates;
        var itemCounter = 1;
    }

    @foreach (var country in ViewBag.States)
    {
        if (itemCounter % numberOfColsNeeded == 1)
        {
            @:<div class="row" >
        }
    
        <div class="col-sm-6">
            <div class="card">
                <img class="card-img-top" src="@country.PhotoId" alt="@country.Name">
                <div class="card-body">
                    <h5 class="card-title">@country.Name</h5>
                </div>
            </div>
        </div>
        if ((itemCounter % numberOfColsNeeded == 0) || ((itemCounter) == totalCounter))
        {
            @:</div>
        }
        itemCounter++;
    }
</div>
<div>
    @Html.ActionLink("Back to List", "Index", "Countries", null, new { @class="btn btn-light"})
    @Html.ActionLink("Edit", "Edit", "Countries", new { id=Model.Id }, new { @class="btn btn-info"})
</div>
