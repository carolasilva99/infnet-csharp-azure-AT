@model MVC.Models.States.CreateStateDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

@{
    if (ViewBag != null && ViewBag?.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            <p>@ViewBag.ErrorMessage</p>
        </div>
    }
}

<h4>Edit State</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <img class="card-img-top" max-length="100%" src="@Model.PhotoId" alt="@Model.Name">
            <div class="form-group">
                <label asp-for="FormFile" class="control-label"></label>
                <input asp-for="FormFile" class="form-control" type="file"/>
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.PhotoId)
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <p>
        @Html.ActionLink("Back To List", "Details", "Countries", new {id = Model.CountryId}, new { @class="btn btn-light"})
    </p>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
